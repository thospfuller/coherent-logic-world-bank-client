<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="indicatorsQueryBuilderFactory" class="com.coherentlogic.wb.client.core.factories.QueryBuilderFactory">
        <constructor-arg name="restTemplate" ref="wbRestTemplate"/>
        <constructor-arg name="uri" value="http://api.worldbank.org/indicators/NY.GDP.MKTP.CD"/>
    </bean>

    <bean id="getIndicatorsExample" class="java.lang.String"
     factory-bean="getIndicatorsExampleFactory" factory-method="getInstance"/>

    <bean id="getIndicatorsExampleFactory" class="com.coherentlogic.wb.client.webstart.application.ExampleFactory">
        <constructor-arg name="resource" ref="getIndicatorsExampleResource"/>
    </bean>

    <bean id="getIndicatorsExampleResource" class="org.springframework.core.io.ClassPathResource">
        <constructor-arg name="path" value="GetIndicatorsExample.groovy"/>
    </bean>
</beans>

